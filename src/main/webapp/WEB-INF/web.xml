    </servlet-mapping>
    <servlet>
        <servlet-name>FindCategoryServlet</servlet-name>
        <servlet-class>com.example.assignment.controller.category.FindCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FindCategoryServlet</servlet-name>
        <url-pattern>/categories/detail</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateCategoryServlet</servlet-name>
        <servlet-class>com.example.assignment.controller.category.UpdateCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateCategoryServlet</servlet-name>
        <url-pattern>/categories/update</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteCategoryServlet</servlet-name>
        <servlet-class>com.example.assignment.controller.category.DeleteCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCategoryServlet</servlet-name>
        <url-pattern>/categories/delete</url-pattern>
    </servlet-mapping>

