    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.example.assignment.controller.account.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServelet</servlet-name>
